{
    "extends": "https://github.com/tsconfig/bases/blob/main/bases/node16.json",
    "compilerOptions": {
        "allowJs": true,
        "allowUnreachableCode": false,
        "alwaysStrict": true,
        "assumeChangesOnlyAffectDirectDependencies": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "extendedDiagnostics": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noErrorTruncation": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "sourceMap": true
    }
}
